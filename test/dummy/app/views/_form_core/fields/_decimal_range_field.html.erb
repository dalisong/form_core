<% f.object.send("build_#{field.name}") unless f.object.send(field.name) %>

<div class="field">
  <%= f.label field.name, field.label, class: 'label' %>
  <div class="control">
    <%= f.fields_for field.name do |ff| %>
      <div class="field has-addons">
        <p class="control is-expanded">
          <%= ff.number_field :begin, class: 'input', id: "#{field.id}_begin", required: field.required, **field.begin_options %>
        </p>
        <p class="control">
          <a class="button is-static">
            ~
          </a>
        </p>
        <p class="control is-expanded">
          <%= ff.number_field :end, class: 'input', id: "#{field.id}_end", required: field.required, **field.end_options %>
        </p>
      </div>
    <% end %>
  </div>
  <% if field.hint.present? %>
    <p class="help"><%= field.hint %></p>
  <% end %>
</div>
