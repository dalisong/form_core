<h3 class="title">Date range field</h3>

<div class="field">
  <%= f.label :begin_from, class: "label" %>
  <div class="control">
    <div class="field has-addons">
      <p class="control">
        <label class="radio button">
          <%= f.radio_button :begin_from, "unlimited" %>
          Unlimited
        </label>
      </p>
    </div>
    <div class="field has-addons">
      <p class="control">
        <label class="radio button">
          <%= f.radio_button :begin_from, "today" %>
          Now with offset
        </label>
      </p>
      <p class="control">
        <%= f.number_field :begin_from_today_days_offset, class: "input", step: 1 %>
      </p>
    </div>
    <div class="field has-addons">
      <p class="control">
        <label class="radio button">
          <%= f.radio_button :begin_from, "date" %>
          Time
        </label>
      </p>
      <p class="control">
        <%= f.date_field :begin, class: "input" %>
      </p>
    </div>
    <div class="field has-addons">
      <p class="control">
        <label class="radio button">
          <%= f.radio_button :begin_from, "days_before_end" %>
          Minutes before end
        </label>
      </p>
      <p class="control">
        <%= f.number_field :days_before_end, class: "input", min: 1, step: 1 %>
      </p>
    </div>
  </div>
</div>

<div class="field">
  <div class="control">
    <label class="checkbox">
      <%= f.check_box :fixed_begin %>
      Fixed begin?
    </label>
  </div>
</div>

<div class="field">
  <%= f.label :end_to, class: "label" %>
  <div class="control">
    <div class="field has-addons">
      <p class="control">
        <label class="radio button">
          <%= f.radio_button :end_to, "unlimited" %>
          Unlimited
        </label>
      </p>
    </div>
    <div class="field has-addons">
      <p class="control">
        <label class="radio button">
          <%= f.radio_button :end_to, "today" %>
          Now with offset
        </label>
      </p>
      <p class="control">
        <%= f.number_field :end_to_today_days_offset, class: "input", step: 1 %>
      </p>
    </div>
    <div class="field has-addons">
      <p class="control">
        <label class="radio button">
          <%= f.radio_button :end_to, "date" %>
          date
        </label>
      </p>
      <p class="control">
        <%= f.date_field :end, class: "input" %>
      </p>
    </div>
    <div class="field has-addons">
      <p class="control">
        <label class="radio button">
          <%= f.radio_button :end_to, "days_since_begin" %>
          Minutes since begin
        </label>
      </p>
      <p class="control">
        <%= f.number_field :days_since_begin, class: "input", min: 1, step: 1 %>
      </p>
    </div>
  </div>
</div>

<div class="field">
  <div class="control">
    <label class="checkbox">
      <%= f.check_box :fixed_end %>
      Fixed end?
    </label>
  </div>
</div>

<div class="field">
  <div class="control">
    <label class="checkbox">
      <%= f.check_box :nullable_end %>
      End can blank?
    </label>
  </div>
</div>

<div class="field">
  <div class="field">
    <%= f.label :minimum_distance, class: "label" %>
    <div class="control">
      <%= f.number_field :minimum_distance, class: "input", min: 0, step: 1 %>
    </div>
  </div>
</div>

<div class="field">
  <div class="field">
    <%= f.label :maximum_distance, class: "label" %>
    <div class="control">
      <%= f.number_field :maximum_distance, class: "input", min: 0, step: 1 %>
    </div>
  </div>
</div>

<hr>
